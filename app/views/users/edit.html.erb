

<div class="body">
  <div class="container">
    <p id="notice"></p>
    <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user name">Name</label>
        <%= f.text_field :name, id:"user_name", placeholder:"名前"%>
    </div>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>

    <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field">
    <label>Introduction</label>
    <%= f.text_area :introduction, class: 'form-control' %>
    </div>
    <div class="actions">
    <%= f.submit "Update user", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  </div>
<% end %>
    </div>
  </div>
</div>