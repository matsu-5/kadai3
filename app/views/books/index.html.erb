<div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      <%= current_user.introduction %>
      </tr>
  </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  </div>

 <h2>New book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
  <div class="field row">
  <label for="book_title">title</label>
  <%= f.text_field :title, class:"col-xs-12 book_title" %>
  </div>
  <div class="field row">
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, class:"col-xs-12 book_body" %>
 </div>
  <div class="actions row">
  <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
 <% end %>
</div>
</div>

    <div class="col-xs-9">
    <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
       <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
       </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
       <tr>
       <td>
        <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

       </td>
       <td>
        <%= link_to book_path(book) do %>
        <%= book.title %>
        <% end %>
       </td>
       <td>
        <%= book.body %>
       </td>
      </tr>
    <% end %>
    <% end %>
 </tbody>
</table>
</div>
</div>
</div>