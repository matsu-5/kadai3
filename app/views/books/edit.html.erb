
<div class="body">
  <div class="container">
    <div class="row">
    <div class="col-md-6 col-md-ofset-3">
    <h1>Editing Book</h1>
	<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <%= form_for(@book) do |f| %>
    <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>

    <div class="field row">
    <label for="book_body">Opinion
    </label>
    <%= f.text_field :body %>
    </div>
    <div class="actions">
    <%= f.submit 'Update book', class:"btn btn-primary" %>
    </div>
    <% end %>
    <td>
     <%= link_to "Show", book_path(@book) %>
    </td>
	|
	<%= link_to "Back", books_path %>
  <div class="col-md-3">
  </div>
</div>
</div>
</div>
</div>